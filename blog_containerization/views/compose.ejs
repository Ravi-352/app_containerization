<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title" name = "postTitle">
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea type="password" name = "postBody" rows = "10" class="form-control" id="exampleInputPassword1" placeholder="Write your post"></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary mt-1">Publish</button>
    
    </form>



